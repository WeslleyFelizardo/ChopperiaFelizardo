@model ChopperiaFelizardo.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h2>Adicione um novo produto</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PriceBuy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PriceBuy" class="form-control" />
                <span asp-validation-for="PriceBuy" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Profit" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Profit" class="form-control" />
                <span asp-validation-for="Profit" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PriceSell" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PriceSell" class="form-control" />
                <span asp-validation-for="PriceSell" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoryID" class ="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SectorID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SectorID" class ="form-control" asp-items="ViewBag.SectorID"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" asp-action="Index">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true">
            Listagem
        </span>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
