@model IEnumerable<ChopperiaFelizardo.Models.Box>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isOpen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValueInitial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValueCurrent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValueEnd)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isOpen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueCurrent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
